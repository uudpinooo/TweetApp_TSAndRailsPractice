{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "target": "ES2015",
    "lib": ["DOM", "ESNext"],
    "module": "ES2015",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "allowJs": true,
    "types": ["@emotion/react/types/css-prop"]
  },
  "exclude": ["./dist/**/*"]
}
